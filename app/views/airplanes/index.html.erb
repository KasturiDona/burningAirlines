<p id="notice"><%= notice %></p>

<a href="airplanes/new" class="btn btn-primary btn-lg">Create New Plane</a>

<h1>Listing Airplanes</h1>

<table class="table table-striped">
  <thead>
    <tr class="danger">
      <th>Name</th>
      <th>Rows</th>
      <th>Columns</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @airplanes.each do |airplane| %>
      <tr class="table-striped">
        <td><%= airplane.name %></td>
        <td><%= airplane.rows %></td>
        <td><%= airplane.columns %></td>
        <td><%= link_to 'Show', airplane %></td>
      <% if @current_user.present? %>
      <% if @current_user.admin? %>
        <td><%= link_to 'Edit', edit_airplane_path(airplane) %></td>
        <td><%= link_to 'Destroy', airplane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

