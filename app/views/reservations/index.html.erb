<p id="notice"><%= notice %></p>

<a href="reservations/new" class="btn btn-primary btn-lg">Create New Reservation</a>

<h1>Listing Reservations</h1>

<table class="table table-striped">
  <thead>
    <tr class="danger">
      <th>Row</th>
      <th>Column</th>
      <th>Flight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.display_row %></td>
        <td><%= reservation.column %></td>
        <td><%= reservation.flight_id %></td>
        <td><%= link_to 'Show', reservation %></td>
      <% if @current_user.present? %>
      <% if @current_user.admin? %>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

