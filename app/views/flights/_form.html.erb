    <%= f.label :to %><br>
    <%= f.text_area :to %>
  </div>
  <div class="field">
    <%= f.label :from %><br>
    <%= f.text_area :from %>
  </div>
  <div class="field">
    <%= f.label :flight_date %><br>
    <%= f.date_select :flight_date %>
  </div>
  <div class="field">
  <%= f.label :airplane %><br>
  <%= f.select :airplane_id, Airplane.all.map { |airplane| [ airplane.name, airplane.id ] }, :include_blank => true %>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>
