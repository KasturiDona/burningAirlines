 <p id="notice"><%= notice %></p>
<% if (@flight.airplane.present?) %>
<p>
  <strong>Airplane:</strong>
  <%= @flight.airplane.name %>
</p>
<% end %>

<p>
  <strong>Flight number:</strong>
  <%= @flight.flight_number %>
</p>

<p>
  <strong>To:</strong>
  <%= @flight.to %>
</p>

<p>
  <strong>From:</strong>
  <%= @flight.from %>
</p>

<p>
  <strong>Flight date:</strong>
  <%= @flight.flight_date.strftime "%A, %e %B %Y" %>
</p>

<p>
  <strong>Number of reservations:</strong> 
  <%= @flight.reservations.count %>
</p>

<p>
  <strong>Seats available:</strong> 
  <%= (@flight.airplane.rows * @flight.airplane.columns) - @flight.reservations.count %>
</p>

<%= link_to 'Reserve a seat', reserve_path %>
<br><br>
<% if @current_user.present? %>
  <% if @current_user.admin? %>
  
  <%= link_to 'Edit', edit_flight_path(@flight) %> |
  <%= link_to 'Back', flights_path %>

<% end %>
<% end %>